extends layout/admin-layout.pug

block extrahead
  script(type="module" src="/js/edit-website.js")

block content

    .w3-main(style="margin-left:300px;margin-top:43px;")
        // Header
        header.w3-container(style="padding-top:22px")
            h5
                b
                    i.fa.fa-dashboard 
                    |  Edit Website

        .w3-row-padding.w3-margin-bottom
            // Website form
            form.w3-container(id="website-form")
                .w3-section
                    label(for="name")
                    b Name:
                    input.w3-input.w3-border.w3-margin-bottom(type="text" id="name" name="name" value="" required="")
                .w3-section
                    label(for="description")
                    b Description:
                    input.w3-input.w3-border.w3-margin-bottom(type="text" id="description" name="description" value="")
                .w3-section
                    label(for="url")
                    b URL:
                    input.w3-input.w3-border.w3-margin-bottom(type="url" id="url" name="url" value="" required="")
                .w3-section
                    label(for="developer_name")
                    b Developer Name:
                    input.w3-input.w3-border.w3-margin-bottom(type="text" id="developer_name" name="developer_name" value="")
                p#error-message(style="color:red;")
                p#success-message(style="color:green;")
                div
                    button.w3-button.w3-orange(type="submit") Update Website

        // End page content

